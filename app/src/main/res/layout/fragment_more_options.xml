<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MoreOptionsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                app:cardBackgroundColor="@color/card_background_color"
                app:cardCornerRadius="10dp"
                app:contentPadding="@dimen/margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/additional_features"
                        android:textAppearance="@style/heading1" />

                    <Button
                        android:id="@+id/status_downloader"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_file_download_24"
                        android:padding="16dp"
                        android:text="@string/status_downloader"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/body1"
                        android:textColor="@color/textColorPrimaryInverse" />

                    <Button
                        android:id="@+id/deleted_media"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_delete_outline_24"
                        android:padding="16dp"
                        android:text="@string/deleted_media"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/body1"
                        android:textColor="@color/textColorPrimaryInverse" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_small"
                app:cardBackgroundColor="@color/card_background_color"
                app:cardCornerRadius="10dp"
                app:contentPadding="@dimen/margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        android:textAppearance="@style/heading1" />

                    <Button
                        android:id="@+id/faqs"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_question_answer_24"
                        android:padding="16dp"
                        android:text="@string/faqs"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/body1"
                        android:textColor="@color/textColorPrimaryInverse" />

                    <Button
                        android:id="@+id/privacy_policy"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_privacy_tip_24"
                        android:padding="16dp"
                        android:text="@string/privacy_policy"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/body1"
                        android:textColor="@color/textColorPrimaryInverse" />

                    <Button
                        android:id="@+id/terms_of_use"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_info_24"
                        android:padding="16dp"
                        android:text="@string/terms_of_use"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/body1"
                        android:textColor="@color/textColorPrimaryInverse" />

                    <Button
                        android:id="@+id/contact_us"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_round_headset_mic_24"
                        android:padding="16dp"
                        android:text="@string/contact_us"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/body1"
                        android:textColor="@color/textColorPrimaryInverse" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>